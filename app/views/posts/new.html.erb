<!-- page_wrapper is in application.css.scss - can modify to your preferences -->
<div id="page_wrapper">
  <h1>What's on your mind today?</h1>
  <%= form_for :post, url: posts_path do |f| %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>

    <%= f.submit %>

  <% end %>

</div>
